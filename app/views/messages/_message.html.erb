        <div>
          <span class="flex"><%= l message.created_at, format: :short %></span>
          <span class="px-4 py-2 rounded-lg inline-block rounded-bl-none <%= balloon_color %>"><%= message.body %></span>
        </div>
    </div>
    <img src="<%= avatar %>?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=3&amp;w=144&amp;h=144" alt="My profile" class="w-6 h-6 rounded-full order-1">
